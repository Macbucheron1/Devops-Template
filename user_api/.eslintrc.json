{
  // Specifies the environments for the code
  "env": {
    "node": true, // Enables Node.js global variables and Node.js scoping
    "es2021": true, // Enables ES2021 globals and syntax
    "mocha": true // Enables Mocha testing framework globals
  },
  // Extends the recommended ESLint rules
  "extends": ["eslint:recommended"],
  // Specifies the parser options
  "parserOptions": {
    "ecmaVersion": 12, // Specifies the ECMAScript version to 12 (ES2021)
    "sourceType": "module" // Allows the use of ES modules
  },
  // Custom rules configuration
  "rules": {
    "indent": ["error", 2], // Enforces a 2-space indentation
    "quotes": ["error", "double"], // Enforces the use of double quotes
    "semi": ["error", "always"], // Enforces the use of semicolons
    "no-unused-vars": ["warn"], // Warns about unused variables
    "no-console": "off" // Allows the use of console statements
  },
  // Specifies additional plugins
  "plugins": ["mocha"], // Adds Mocha-specific linting rules
  // Specifies patterns to ignore during linting
  "ignorePatterns": ["node_modules/", "dist/", "*.min.js"] // Ignores specified directories and files
}
